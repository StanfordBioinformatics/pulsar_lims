<header>
  <h1>Plates</h1>
  
  <ul class="actions">
    <%= render partial: "application_partials/auth_new_record", locals: {model_class: Plate} %>
  </ul> 
</header>

<table class="attributes">
  <thead>
    <tr>
      <th>Name</th>
      <th>Dimensions</th>
      <th>Vendor</th>
      <th>Vendor product identifier</th>
      <th>Sequencing library prep kit</th>
      <th>Paired end</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @plates.each do |plate| %>
      <tr>
        <td><%= link_to plate.name, plate %></td>
				<td><%= "#{plate.nrow}x#{plate.ncol}" %></td>
        <td><%= link_to plate.vendor.name, plate.vendor %></td>
        <td><%= plate.vendor_product_identifier %></td>
				<% if plate.sequencing_library_prep_kit.present? %>
	        <td><%= link_to plate.sequencing_library_prep_kit.name, plate.sequencing_library_prep_kit %></td>
				<% else %>
					<td></td>
				<% end %>
        <td><%= plate.paired_end %></td>
        <td><%= link_to fa_icon("pencil"), edit_plate_path(plate) %></td>
        <td><%= link_to fa_icon("trash"), plate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
