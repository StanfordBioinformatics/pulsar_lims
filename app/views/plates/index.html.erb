<header>
  <h1>Plates</h1>
  
  <ul class="actions">
    <!-- <%# render partial: "application_partials/auth_new_record", locals: {model_class: Plate} %> 
			#Don't allow users to add plates here. Only via the "Add Plate" button on the single_cell_sorting experiment object.
		-->
  </ul> 
</header>

<table class="attributes">
  <thead>
    <tr>
      <th>Name</th>
			<th>Single Cell Sorting</th>
      <th>Dimensions</th>
      <th>Vendor</th>
      <th>Vendor product identifier</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @plates.each do |plate| %>
      <tr>
        <td><%= link_to plate.name, plate %></td>
				<td><%= link_to plate.single_cell_sorting.name, plate.single_cell_sorting %></td>
				<td><%= "#{plate.nrow}x#{plate.ncol}" %></td>
        <td><%= link_to plate.vendor.name, plate.vendor %></td>
        <td><%= plate.vendor_product_identifier %></td>
        <td>
					<%= link_to fa_icon("pencil"), edit_plate_path(plate) %>
        	<%= link_to fa_icon("trash"), plate, method: :delete, data: { confirm: 'Are you sure?' } %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>
