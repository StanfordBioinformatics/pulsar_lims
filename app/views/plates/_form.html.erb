<%= simple_form_for(@plate) do |f| %>
	<%= render partial:  "application_partials/show_form_error_messages", locals: {:model_obj => @plate } %>

  <%= f.input :name %>
	<%= f.input :dimensions, collection: Plate::DIMENSIONS, prompt: "Select the plate size" %>
	<%= f.association :starting_biosample, label_html: {"data-toggle": "tooltip", "title": "Select the starting biosample containing cells to be individually sorted into wells."} %>
  <%= f.association :vendor %>
  <%= f.input :vendor_product_identifier %>
  <%= f.association :sequencing_library_prep_kit %>
	<%= f.input :paired_end %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn-primary" %>
  </div></br>
<% end %>
