<%= render partial:  "application_partials/header", locals: {rec: @shipping } %>

<table class="attributes"> 
  <% if @shipping.biosample.present? %>
    <tr>
      <th><strong>Biosample:</strong></th>
      <td><%= link_to_record @shipping.biosample %></td>
    </tr>
  <% end %>

  <tr>
    <th><strong>From:</strong></th>
    <td><%= link_to_record @shipping.from %></td>
  </tr>

  <tr>
    <th><strong>To:</strong></th>
    <td><%= link_to_record @shipping.to %></td>
  </tr>

  <tr>
    <th><strong>Carrier:</strong></th>
    <td><%= @shipping.carrier %></td>
  </tr>
  
  <tr>
    <th><strong>Tracking code:</strong></th>
    <td><%= @shipping.tracking_code %></td>
  </tr>
  
  <tr>
    <th><strong>Date shipped:</strong></th>
    <td><%= @shipping.date_shipped %></td>
  </tr>
  
  <tr>
    <th><strong>Received:</strong></th>
    <td><%= @shipping.received %></td>
  </tr>
</table>

<%= link_to 'Back', shippings_path %>
