<header class="index-view-header">
  <h1 class="index-page-header">                                                                       
    <%= @title || "Sequencing Platforms" %>                                                                      
  </h1>
  <p class="model-definition"><%= SequencingPlatform::DEFINITION %></p>

  <ul class="actions">
		<%= render partial: "application_partials/auth_new_record" %>
  </ul> 
  <%= render partial: "application_partials/total", locals: {total: @total} %>
</header>

<table class="attributes index">
  <thead>
    <tr>
      <%= render partial: "application_partials/index_common_table_headers" %>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |rec| %>
      <tr>
        <%= render partial: "application_partials/index_common_table_cells", locals: {record: rec} %>
        <td>
					<%= link_to fa_icon("pencil"), edit_sequencing_platform_path(rec) %>
        	<%= link_to fa_icon("trash"), rec, method: :delete, data: { confirm: 'Are you sure?' } %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if defined?(@page) %>                                                                               
  <%= paginate @records %>                                                                             
  <%= link_to "All", sequencing_platforms_path(all: true) %>                                                        
<% end %>
