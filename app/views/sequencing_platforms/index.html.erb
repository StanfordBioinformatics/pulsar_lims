<header>
	<h1>Sequencing Platforms</h1>

  <ul class="actions">
		<%= render partial: "application_partials/auth_new_record", locals: {model_class: SequencingPlatform} %>
  </ul> 
</header>

<table class="attributes">
  <thead>
    <tr>
      <th>Name</th>
			<th>Creator</th>
			<th>Date created</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @sequencing_platforms.each do |rec| %>
      <tr>
        <td><%= link_to rec.name, rec %></td>
				<td><%= rec.user.display() %></td>
				<td><%= time_ago_in_words(rec.created_at) %> ago </td>
        <td>
					<%= link_to fa_icon("pencil"), edit_sequencing_platform_path(rec) %>
        	<%= link_to fa_icon("trash"), rec, method: :delete, data: { confirm: 'Are you sure?' } %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>
