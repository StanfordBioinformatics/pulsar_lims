<header>
	<h1>Sequencing Platforms</h1>

  <ul class="actions">
		<%= render partial: "application_partials/auth_new_record", locals: {model_class: SequencingPlatform} %>
  </ul> 
</header>

<table id="attributes">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @sequencing_platforms.each do |sequencing_platform| %>
      <tr>
        <td><%= sequencing_platform.name %></td>
        <td><%= link_to fa_icon("pencil"), edit_sequencing_platform_path(sequencing_platform) %></td>
        <td><%= link_to fa_icon("trash"), sequencing_platform, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
