<%= render partial:  "application_partials/show_form_error_messages", locals: { :model_obj => @sequencing_platform } %>
<header>
  <h1><%= @sequencing_platform.name %></h1>

  <ul class="actions">
    <%= render partial: "application_partials/auth_edit_record", locals: {record: @sequencing_platform} %>
    <%= render partial: "application_partials/auth_destroy_record", locals: {record: @sequencing_platform} %>
  </ul>
</header>

<%= render partial: "application_partials/record_meta", locals: { record: @sequencing_platform } %>

<table class="attributes">
	<tr>
		<th><strong>Name:</strong></th>
		<td><%= @sequencing_platform.name %></td>
	</tr>

  <tr class="notes-row">                                                                               
    <th><strong>Notes</strong></th>                                                                    
    <td><%= simple_format(@sequencing_platform.notes) %></td>                                                     
  </tr> 
</table>

<!-- Hidden form that is used when the user tries to edit the 'notes'. --> 
<%= render partial: "application_partials/edit_notes", locals: {rec: @sequencing_platform} %>

<%= link_to 'Back', sequencing_platforms_path %>
