<header>
	<h1 class="index-page-header">Nucleic Acid Terms</h1>
	<p class="model-definition"><%= NucleicAcidTerm::DEFINITION %></p>

	<ul class="actions">
		<%= render partial: "application_partials/auth_new_record", locals: {model_class: NucleicAcidTerm} %>
	</ul> 
</header>

<table class="attributes index">
  <thead>
    <tr>
      <%= render partial: "application_partials/index_common_table_headers" %>
      <th>Accession</th>
      <th>Definition</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |rec| %>
      <tr>
        <%= render partial: "application_partials/index_common_table_cells", locals: {record: rec} %>
        <td><%= rec.accession %></td>
        <td><%= rec.definition %></td>
        <td>
					<%= link_to fa_icon("pencil"), edit_nucleic_acid_term_path(rec) %>
        	<%= link_to fa_icon("trash"), rec, method: :delete, data: { confirm: 'Are you sure?' } %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @records %>
