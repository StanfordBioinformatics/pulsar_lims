<%= render partial:  "application_partials/show_form_error_messages", locals: { :model_obj => @library_fragmentation_method } %>
<header>
  <h1><%= @library_fragmentation_method.name %></h1>

  <ul class="actions">
    <%= render partial: "application_partials/auth_edit_record", locals: {record: @library_fragmentation_method} %>
    <%= render partial: "application_partials/auth_destroy_record", locals: {record: @library_fragmentation_method} %>
  </ul>
</header>

<%= render partial: "application_partials/record_meta", locals: { record: @library_fragmentation_method } %>

<table class="attributes">
	<tr>
  	<th><strong>Name:</strong></th>
  	<td><%= @library_fragmentation_method.name %></td>
	</tr>

	<tr>
  	<th><strong>Description:</strong></th>
  	<td><%= @library_fragmentation_method.description %></td>
	</tr>

  <tr class="notes-row">                                                                               
    <th><strong>Notes</strong></th>                                                                    
    <td><%= simple_format(@library_fragmentation_method.notes) %></td>                                                     
  </tr> 
</table>

<!-- Hidden form that is used when the user tries to edit the 'notes'. --> 
<%= render partial: "application_partials/edit_notes", locals: {rec: @library_fragmentation_method} %>

<%= link_to 'Back', library_fragmentation_methods_path %>
