<header>
  <h1 class="index-page-header">Concentration Units</h1>
	<p class="model-definition"><%= ConcentrationUnit::DEFINITION %></p>

  <ul class="actions">
    <%= render partial: "application_partials/auth_new_record", locals: {model_class: ConcentrationUnit} %>
  </ul> 
</header>

<table class="attributes">
  <thead>
    <tr>
      <%= render partial: "application_partials/index_common_table_headers" %>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @concentration_units.each do |rec| %>
      <tr>
        <%= render partial: "application_partials/index_common_table_cells", locals: {record: rec} %>
        <td>
					<%= link_to fa_icon("pencil"), edit_concentration_unit_path(rec) %>
       		<%= link_to fa_icon("trash"), rec, method: :delete, data: { confirm: 'Are you sure?' } %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>
