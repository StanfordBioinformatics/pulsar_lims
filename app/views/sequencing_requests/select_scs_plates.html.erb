<div style="position: relative;" class="bg-info jumbotron">
	<h3 class="display-3">Select Plates</h3>
	<%= simple_form_for @sequencing_request do |f| %>
		<%= render partial: "select_plates", locals: {f: f} %>
		<div class="form-actions">
			<%= f.button :submit, "Add Library", class: "btn-primary" %>
		</div>
	<% end %>
	<% if not @sequencing_request.errors.any? %>
		<!-- Don't show toggle-up button if user is form was already submitted with errors. -->
		<button style="position: absolute; right: 0; bottom: 0;" class="sreq-toggle-up-library-form" type="button" class="btn btn-link"><%= fa_icon("toggle-up lg") %></button>
	<% end %>
</div>
