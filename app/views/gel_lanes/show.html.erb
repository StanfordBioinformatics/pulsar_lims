  <ul class="actions">                                                                                 
    <%= render partial: "application_partials/auth_edit_record", locals: {record: @gel_lane} %>
    <%= render partial: "application_partials/auth_destroy_record", locals: {record: @gel_lane} %>
  </ul>                                                                                                
</header>                                                                                              
                                                                                                       
