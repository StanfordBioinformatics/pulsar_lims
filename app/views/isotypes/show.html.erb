<%= render partial:  "application_partials/header", locals: {rec: @isotype } %>

<table class="attributes">
  <tr>
    <th><strong>Name:</strong></th>
    <td><%= @isotype.name %></td>
  </tr>

  <tr class="notes-row">                                                                               
    <th><strong>Notes</strong></th>                                                                    
