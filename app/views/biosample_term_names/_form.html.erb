<%= simple_form_for(@biosample_term_name) do |f| %>
  <%= f.error_notification %>

  <%= f.association :biosample_ontology, label_html: {"data-toggle" => "tooltip", "title" => "Name of the ontology system"} %>
  <%= f.input :name, label_html: {"data-toggle" => "tooltip", "title" => "Unique ontology term name"} %>
  <%= f.input :accession, label_html: {"data-toggle" => "tooltip", "title" => "Unique ontology accession"} %>
  <%= f.input :description, label_html: {"data-toggle" => "tooltip", "title" => "The description of the ontology term"} %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn-primary" %>
  </div></br>
<% end %>
