<header>
	<h1>Biosamples</h1>

  <ul class="actions">
		<%= render partial: "application_partials/auth_new_record", locals: {model_class: Biosample} %>
  </ul> 
</header>	
	

<table class="attributes">
  <thead>
    <tr>
			<th>Name</th>
			<th>Owner</th>
			<th>Parent Biosample</th>
			<th>Well</th>
      <!-- <th>Description</th> -->
      <th>Vendor</th>
			<th>Biosample Type</th>
      <th>Biosample Term Name</th>
			<th>CRISPR</th>
      <th>ENCID</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @biosamples.each do |biosample| %>
				<td><%= link_to biosample.name, biosample %></td>
				<td>
					<% if biosample.owner.present? %>
						<%= biosample.owner.display %>
					<% end %>
				</td>
				<% if biosample.parent_biosample.present? %>
					<td><%= link_to biosample.parent_biosample.name, biosample.parent_biosample %></td>
				<% else %>
					<td></td>
				<% end %>
				<% if biosample.well.present? %>
					<td><%= link_to biosample.well.name, [biosample.well.plate, biosample.well] %></td>
				<% else %>
					<td></td>
				<% end %>
        <!-- <td><%# biosample.description %></td> -->
        <td><%= biosample.vendor.name %></td>
				<td><%= biosample.biosample_type.name %></td>
        <td><%= link_to biosample.biosample_term_name.name, biosample.biosample_term_name %></td>
				<% if biosample.crispr.present? %>	
					<td><%= link_to biosample.crispr.name, biosample.crispr %></td>
				<% else %>
					<td></td>
				<% end %>
        <td><%= biosample.encid %></td>
        <td>
					<%= link_to fa_icon("pencil"), edit_biosample_path(biosample) %>
        	<%= link_to fa_icon("trash"), biosample, method: :delete, data: { confirm: 'Are you sure?' } %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>
