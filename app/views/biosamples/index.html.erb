<header>
	<h1>Biosamples</h1>

  <ul class="actions">
		<%= render partial: "application_partials/auth_new_record", locals: {model_class: Biosample} %>
  </ul> 
</header>	
	

<table class="attributes">
  <thead>
    <tr>
			<th>Name</th>
      <th>Description</th>
      <th>Vendor</th>
      <th>Biosample Term Name</th>
      <th>ENCID</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @biosamples.each do |biosample| %>
      <tr>
				<td><%= link_to biosample.name, biosample %></td>
        <td><%= biosample.description %></td>
        <td><%= biosample.vendor.name %></td>
        <td><%= link_to biosample.biosample_term_name.name, biosample.biosample_term_name %></td>
        <td><%= biosample.encid %></td>
        <td><%= link_to fa_icon("pencil"), edit_biosample_path(biosample) %></td>
        <td><%= link_to fa_icon("trash"), biosample, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
