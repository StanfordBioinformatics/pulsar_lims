<header>
	<h1>Biosamples</h1>

  <ul class="actions">
    <li><%= link_to "New Biosample", new_biosample_path, class: "new" %></li>
  </ul> 
</header>	
	

<table>
  <thead>
    <tr>
			<th>Name</th>
      <th>Description</th>
      <th>Vendor</th>
      <th>Biosample Term Name</th>
      <th>ENCID</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @biosamples.each do |biosample| %>
      <tr>
				<td><%= biosample.name %></td>
        <td><%= biosample.description %></td>
        <td><%= biosample.vendor.name %></td>
        <td><%= biosample.ontology_term_name %></td>
        <td><%= biosample.encid %></td>
        <td><%= link_to 'Show', biosample %></td>
        <td><%= link_to 'Edit', edit_biosample_path(biosample) %></td>
        <td><%= link_to 'Destroy', biosample, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
