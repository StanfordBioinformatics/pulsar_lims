<header>
  <h1>Chromosomes</h1>

  <ul class="actions">
    <%= render partial: "application_partials/auth_new_record", locals: {model_class: Chromosome} %>
  </ul>
</header>

<table class="attributes">
  <thead>
    <tr>
      <th>Name</th>
      <th>Reference genome</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @chromosomes.each do |chromosome| %>
      <tr>
        <td><%= chromosome.name %></td>
        <td><%= link_to chromosome.reference_genome.name, chromosome.reference_genome %></td>
        <td>
					<%= link_to link_to fa_icon("pencil"), edit_reference_genome_chromosome_path(chromosome) %>
        	<%= link_to link_to fa_icon("trash"), chromosome, method: :delete, data: { confirm: 'Are you sure?' } %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>
