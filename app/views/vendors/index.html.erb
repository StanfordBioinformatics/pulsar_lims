<header>
	<h1>Vendors</h1>

  <ul class="actions">
		<%= render partial: "application_partials/auth_new_record", locals: {model_class: Vendor} %>
  </ul> 
</header>

<table class="attributes">
  <thead>
    <tr>
      <th>Name</th>
			<th>Creator</th>
      <th>ENCID</th>
      <th>Description</th>
			<th>URL</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @vendors.each do |rec| %>
      <tr>
				<td><%= link_to rec.name, rec%></td>
				<td><%= rec.user.display() %></td>
				<td><%= rec.encode_identifier %></td>
        <td><%= rec.description %></td>
        <td><%= link_to rec.url, rec.url %></td>
        <td>
					<%= link_to fa_icon("pencil"), edit_vendor_path(rec) %>j
        	<%= link_to fa_icon("trash"), rec, method: :delete, data: { confirm: 'Are you sure?' } %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>
