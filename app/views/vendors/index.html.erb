<header>
	<h1 class="index-page-header">Vendors</h1>
	<p class="model-definition"><%= Vendor::DEFINITION %></p>

  <ul class="actions">
		<%= render partial: "application_partials/auth_new_record" %>
  </ul> 
</header>

<table class="attributes index">
  <thead>
    <tr>
      <%= render partial: "application_partials/index_common_table_headers" %>
      <th>Upstream ID</th>
      <th>Description</th>
			<th>URL</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |rec| %>
      <tr>
        <%= render partial: "application_partials/index_common_table_cells", locals: {record: rec} %>
				<td><%= rec.upstream %></td>
        <td><%= rec.description %></td>
        <td><%= link_to rec.url, rec.url %></td>
        <td>
					<%= link_to fa_icon("pencil"), edit_vendor_path(rec) %>j
        	<%= link_to fa_icon("trash"), rec, method: :delete, data: { confirm: 'Are you sure?' } %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @records %>
