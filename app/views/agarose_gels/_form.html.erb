<%= simple_form_for(@agarose_gel, html: { class: 'directUpload', data: { 'form-data' => (@s3_direct_post.fields), 'url' => @s3_direct_post.url, 'host' => URI.parse(@s3_direct_post.url).host } }) do |f| %>

  <% file_upload_hint="" %>
  <% if @agarose_gel.gel_image.present? %>
    <% file_upload_hint="You previously uploaded #{@agarose_gel.gel_image}." %>
  <% end %>
  <%= f.input :gel_image, as: :file, label: "Gel image", hint: file_upload_hint, input_html: {class: "image"} %>
  <%= f.input :caption, label_html: {"data-toggle": "tooltip", "title": "A short description of the gel image to be shown alongside the image when viewed."} %>

  <%= f.input :percent_agarose, placeholder: "%" %>
  <%= f.input :voltage, placeholder: "volts" %>
  <%= f.input :run_date %>
  <%= f.input :notes %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn-primary" %>
  </div>
<% end %>
</br>
