<header>
	<h1>Sequencing Centers</h1>
  <ul class="actions">
    <%= render partial: "application_partials/auth_new_record", locals: {model_class: SequencingCenter} %>
  </ul> 
</header>

<table class="attributes">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @sequencing_centers.each do |sequencing_center| %>
      <tr>
        <td><%= sequencing_center.name %></td>
        <td><%= sequencing_center.address %></td>
        <td><%= link_to fa_icon("pencil"), edit_sequencing_center_path(sequencing_center) %></td>
        <td><%= link_to fa_icon("trash"), sequencing_center, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

