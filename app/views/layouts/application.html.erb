<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width", initial-scale=1">
  <title>
    <% if content_for?(:title) %>
      <%= yield(:title) %>
    <% else %>
      SnyderEncode 
  <% end %>
  </title>

  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to "<span id=\"app-title\">SnyderEncode<span>".html_safe, root_path, class: "navbar-brand" %>
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
    
      <div class="collapse navbar-collapse" id="collapse">
        <ul class="nav navbar-nav">
          <li class="<%= "active" if current_page?("/") %>">
            <%= link_to fa_icon("home") + " Home", root_path %>
          </li>
          <% admins_only do %>
            <li class="<%= "active" if current_page?("/admin") %>">
              <%= link_to fa_icon("coffee") + " Admin", admin_root_path %>
            </li>
          <% end %>
          <% unless user_signed_in? %>
            <li class="<%= "active" if current_page?("/users/sign_up") %>">
              <%= link_to fa_icon("user-plus") + " Create Account", new_user_registration_path %>
            </li>
            <li class="<%= "active" if current_page?("/users/sign_in") %>">
              <%= link_to fa_icon("sign-in") + " Sign in", new_user_session_path %>
            </li>
          <% end %>
        </ul>
        
        <% if user_signed_in? %>
          <div class="navbar-right">
            <p class="navbar-text">
              <%= fa_icon("user")%><span> Signed in as <%= current_user.email %></span>
            </p>
            <ul class="nav navbar-nav">
              <li><%= link_to fa_icon("sign-out") + " Sign out", destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  </nav>

  <div class="container-fluid">
    <div class="row">
			<div class="sidebar col-xs-2">
        <nav class="navbar navbar-default navbar-fixed-side">
          <div class="navbar-header">
            <span class="navbar-brand">Object Store</span>
          </div>
          <div class="nav navbar-nav navbar-left">
						<%= link_to "Antibodies",antibodies_path, class: current_page?("/antibodies") ? "list-group-item active" : "list-group-item" %>
            <%= link_to "Antibody Purifications",antibody_purifications_path, class: current_page?("/antibody_purifications") ? "list-group-item active" : "list-group-item" %>
            <%= link_to "Biosamples",biosamples_path, class: current_page?("/biosamples") ? "list-group-item active" : "list-group-item" %>
            <%= link_to "Biosample Types",biosample_types_path, class: current_page?("/biosample_types") ? "list-group-item active" : "list-group-item" %>
            <%= link_to "Documents",documents_path, class: current_page?("/documents") ? "list-group-item active" : "list-group-item" %>
            <%= link_to "Document Types",document_types_path, class: current_page?("/document_types") ? "list-group-item active" : "list-group-item" %>
            <%= link_to "Donors",donors_path, class: current_page?("/donors") ? "list-group-item active" : "list-group-item" %>
            <%= link_to "Experiment Types",experiment_types_path, class: current_page?("/experiment_types") ? "list-group-item active" : "list-group-item" %>
            <%= link_to "Human Targets",human_targets_path, class: current_page?("/human_targets") ? "list-group-item active" : "list-group-item" %>
            <%= link_to "Isotypes",isotypes_path, class: current_page?("/isotypes") ? "list-group-item active" : "list-group-item" %>
            <%= link_to "Libraries",libraries_path, class: current_page?("/libraries") ? "list-group-item active" : "list-group-item" %>
            <%= link_to "Nucleic Acid Terms",nucleic_acid_terms_path, class: current_page?("/nucleic_acid_terms") ? "list-group-item active" : "list-group-item" %>
            <%= link_to "Organisms",organisms_path, class: current_page?("/organisms") ? "list-group-item active" : "list-group-item" %>
            <%= link_to "Reference Genomes",reference_genomes_path, class: current_page?("/reference_genomes") ? "list-group-item active" : "list-group-item" %>
            <%= link_to "Sequencing Centers",sequencing_centers_path, class: current_page?("/sequencing_centers") ? "list-group-item active" : "list-group-item" %>
            <%= link_to "Sequencing Platforms",sequencing_platforms_path, class: current_page?("/sequencing_platforms") ? "list-group-item active" : "list-group-item" %>
            <%= link_to "Sequencing Requests",sequencing_requests_path, class: current_page?("/sequencing_requests") ? "list-group-item active" : "list-group-item" %>
            <%= link_to "Uberons",uberons_path, class: current_page?("/uberons") ? "list-group-item active" : "list-group-item" %>
            <%= link_to "Vendors",vendors_path, class: current_page?("/vendors") ? "list-group-item active" : "list-group-item" %>
          </div>
        </nav>
      </div>
      <div class="data-container col-xs-10">
        <% flash.each do |key, message| %>
          <div class="alert alert-<%= key %>">
          <%= message %>
          </div>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </div>
  <nav id="footer" class="navbar navbar-default navbar-fixed-bottom">
    <div class="navbar-right">
      <p class="navbar-text">
      <%= fa_icon("copyright") %><span>2016 The Board of Trustees of the Leland Stanford Junior University</span>
      </p>
    </div>
  </nav>
</body>
</html>
