<% record_class_hr = record.model_name.human.titleize %>
<% if policy(record).destroy? %>
	<li><%= link_to "Delete #{record_class_hr}", [record.model_name.to_s.underscore], method: :delete, data: { confirm: "Are you sure you would like to delete this #{record_class_hr}?"},class: "delete" %></li>
<% end %>
