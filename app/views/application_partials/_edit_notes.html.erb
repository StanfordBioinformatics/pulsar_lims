<div style="display: none"; class="notes-to-edit">                                                                                     
  <%= simple_form_for rec do |f| %>                                                              
    <%= f.input_field :notes, "style": "display: block; width: 100%; height: 300px; padding: 1em; margin-bottom: 1em" %>
    <div class="actions">                                                                              
      <%= f.button :submit, "Update notes", class: "btn-primary "%>                                    
      <%= link_to "Cancel", "#", style: "margin-left: 1em;", class: "cancel-edit-notes" %>             
    </div></br>                                                                                        
  <% end %>                                                                                            
</div> 
