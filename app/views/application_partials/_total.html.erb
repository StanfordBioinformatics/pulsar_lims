
<!-- This is mean for showing the total number of records in an index view. The toal
     will be shown in the header tag. 

Args:
    1. records - An ActiveRecord_Relation.

-->

<!-- Make sure input is an ActiveRecord_Relation -->
<% if records.class < ActiveRecord::Relation %>
  <span style="position: absolute; bottom: 0; right: 0;" class="index-view-total"><%= page_entries_info records %></span>
<% else %>
  <span style="position: absolute; bottom: 0; right: 0;" class="index-view-total"><strong>Total: </strong><%= records.count %></span>
<% end %>
