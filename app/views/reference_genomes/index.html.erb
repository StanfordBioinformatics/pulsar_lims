<header>
	<h1 class="index-page-header">Reference Genomes</h1>
	<p class="model-definition"><%= ReferenceGenome::DEFINITION %></p>
  
  <ul class="actions">
		<%= render partial: "application_partials/auth_new_record", locals: {model_class: ReferenceGenome} %>
  </ul> 
</header>
  
<table class="attributes index">
  <thead>
    <tr>
      <%= render partial: "application_partials/index_common_table_headers" %>
      <th>Url</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |rec| %>
      <tr>
        <%= render partial: "application_partials/index_common_table_cells", locals: {record: rec} %>
        <td><%= rec.url %></td>
        <td>
					<%= link_to fa_icon("pencil"), edit_reference_genome_path(rec) %>
        	<%= link_to fa_icon("trash"), rec, method: :delete, data: { confirm: 'Are you sure?' } %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>
