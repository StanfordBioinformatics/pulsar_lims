<header>
  <h1><%= @reference_genome.name %></h1>

  <ul class="actions">
    <li><%= link_to "Edit Library", edit_reference_genome_path(@reference_genome), class: "edit" %></li>
    <li><%= link_to "Delete Library", reference_genome_path(@reference_genome), method: :delete,
                     data: { confirm: "Are you sure you would like to delete this reference genome?"},
                     class: "delete" %></li>
  </ul>
</header>
<p>
  <strong>Name:</strong>
  <%= @reference_genome.name %>
</p>

<p>
  <strong>Url:</strong>
  <%= @reference_genome.url %>
</p>

<%= link_to 'Back', reference_genomes_path %>
