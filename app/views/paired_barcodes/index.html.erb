<header>
  <h1>Paired Barcodes</h1>
  
  <ul class="actions">
    <%= render partial: "application_partials/auth_new_record", locals: {model_class: PairedBarcode} %>
  </ul> 
</header>

<table class="attributes">
  <thead>
    <tr>
      <th>Name</th>
			<th>Creator</th>
			<th>Date created</th>
      <th>Sequencing library prep kit</th>
      <th>Index1</th>
      <th>Index2</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @paired_barcodes.each do |rec| %>
      <tr>
        <td><%= link_to rec.name, rec %></td>
				<td><%= rec.user.display() %></td>
				<td><%= time_ago_in_words(rec.created_at) %> ago </td>
        <td><%= link_to rec.sequencing_library_prep_kit.name, rec.sequencing_library_prep_kit %></td>
        <td><%= link_to "#{rec.index1.name} #{rec.index1.sequence}", [rec.sequencing_library_prep_kit,rec.index1] %></td>
        <td><%= link_to "#{rec.index2.name} #{rec.index2.sequence}", [rec.sequencing_library_prep_kit,rec.index2] %></td>
        <td><%= link_to fa_icon("pencil"), edit_paired_barcode_path(rec) %></td>
        <td><%= link_to fa_icon("trash"), rec, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
