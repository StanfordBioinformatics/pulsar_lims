<header class="index-view-header">
  <h1 class="index-page-header">                                                                       
    <%= @title || "Single Cell Sortings" %>                                                                      
  </h1>
  <p class="model-definition"><%= SingleCellSorting::DEFINITION %></p>
  
  <ul class="actions">
    <%= render partial: "application_partials/auth_new_record" %>
  </ul> 
  <%= render partial: "application_partials/total", locals: {records: @records} %>
</header>

<table class="attributes index">
  <thead>
    <tr>
      <%= render partial: "application_partials/index_common_table_headers" %>
      <th>Description</th>
      <th>Starting Biosample</th>
      <th>Analyses</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |rec| %>
      <tr>
        <%= render partial: "application_partials/index_common_table_cells", locals: {record: rec} %>
        <td><%= rec.description %></td>
        <td><%= link_to rec.starting_biosample.name, rec.starting_biosample %></td>
        <td><%= render partial: "application_partials/link_to_has_many", locals: {links: rec.analyses} %></td>
        <td>
          <%= link_to fa_icon("pencil"), edit_single_cell_sorting_path(rec) %>
          <%= link_to fa_icon("trash"), rec, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if defined?(@page) %>                                                                               
  <%= paginate @records %>                                                                             
  <%= link_to "All", single_cell_sortings_path(all: true) %>                                                        
<% end %>
