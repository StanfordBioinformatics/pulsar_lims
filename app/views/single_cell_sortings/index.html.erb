<header>
  <h1>Single Cell Sortings</h1>
  
  <ul class="actions">
    <%= render partial: "application_partials/auth_new_record", locals: {model_class: SingleCellSorting} %>
  </ul> 
</header>

<table class="attributes">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
			<th>Starting Biosample</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @single_cell_sortings.each do |scs| %>
      <tr>
        <td><%= link_to scs.name, scs %></td>
        <td><%= scs.description %></td>
				<td><%= link_to scs.starting_biosample.name, scs.starting_biosample %></td>
        <td>
					<%= link_to fa_icon("pencil"), edit_single_cell_sorting_path(scs) %>
        	<%= link_to fa_icon("trash"), scs, method: :delete, data: { confirm: 'Are you sure?' } %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>
