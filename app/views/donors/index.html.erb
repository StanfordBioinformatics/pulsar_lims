<header>
	<h1 class="index-page-header">Donors</h1>
	<p class="model-definition"><%= Donor::DEFINITION %></p>
	
  <ul class="actions">
		<%= render partial: "application_partials/auth_new_record", locals: {model_class: Donor} %>
  </ul> 
</header>

<table class="attributes index">
  <thead>
    <tr>
      <%= render partial: "application_partials/index_common_table_headers" %>
      <th>Encode</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |rec| %>
      <tr>
        <%= render partial: "application_partials/index_common_table_cells", locals: {record: rec} %>
        <td><%= link_to rec.encode_identifier, rec %></td>
        <td>
					<%= link_to fa_icon("pencil"), edit_donor_path(rec) %>
        	<%= link_to fa_icon("trash"), rec, method: :delete, data: { confirm: 'Are you sure?' } %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @records %>
