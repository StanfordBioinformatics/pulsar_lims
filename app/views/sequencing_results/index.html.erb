<header>
	<h1>Barcode Sequencing Results</h1>

<!--
	#Dont include lines below since we don't want users to be able to create a sequencing_result
  # from it's own page, rather, only through a sequencing_run object.
	<ul class="actions">
	<\%= render partial: "application_partials/auth_new_record", locals: {model_class: BarcodeSequencingResult} %>
	</ul> 
-->
</header>

<table class="attributes">
  <thead>
    <tr>
      <th>Sequencing run</th>
      <th>Library</th>
      <th>Comment</th>
      <th>Read1 uri</th>
      <th>Read2 uri</th>
      <th>Read1 count</th>
      <th>Read2 count</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @_sequencing_results.each do |res| %>
      <tr>
        <td><%= link_to @sequencing_run.name, [@sequencing_request,@sequencing_run] %></td>
        <td><%= link_to res.library.name, res.library %></td>
        <td><%= res.comment %></td>
        <td><%= res.read1_uri %></td>
        <td><%= res.read2_uri %></td>
        <td><%= res.read1_count %></td>
        <td><%= res.read2_count %></td>
        <td>
					<%= link_to fa_icon("pencil"), [:edit,@sequencing_request,@sequencing_run,res] %>
        	<%= link_to fa_icon("trash"), [@sequencing_request,@sequencing_run,res], method: :delete, data: { confirm: 'Are you sure?' } %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>
