<header>
	<h1>Experiment Types</h1>

  <ul class="actions">
		<%= render partial: "application_partials/auth_new_record", locals: {model_class: ExperimentType} %>
  </ul> 
</header>

<table class="attributes">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @experiment_types.each do |experiment_type| %>
      <tr>
        <td><%= link_to experiment_type.name, experiment_type %></td>
        <td>
					<%= link_to fa_icon("pencil"), edit_experiment_type_path(experiment_type) %></td>
        	<%= link_to fa_icon("trash"), experiment_type, method: :delete, data: { confirm: 'Are you sure?' } %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>
