<% title(@antibody_purification.name, "AntibodyPurifications") %>
<%= render partial:  "application_partials/show_form_error_messages", locals: { :model_obj => @antibody_purification } %>
<header>
  <h1><%= @antibody_purification.name %></h1>

  <ul class="actions">
    <%= render partial: "application_partials/auth_edit_record", locals: {record: @antibody_purification} %>
    <%= render partial: "application_partials/auth_destroy_record", locals: {record: @antibody_purification} %>
  </ul>
</header>

<%= render partial: "application_partials/record_meta", locals: { record: @antibody_purification } %>

<table class="attributes">
	<tr>
		<th><strong>Name:</strong></th>
		<td><%= @antibody_purification.name %></td>
	</tr>

  <tr class="notes-row">                                                                               
    <th><strong>Notes</strong></th>                                                                    
    <td><%= simple_format(@antibody_purification.notes) %></td>                                                     
  </tr> 
</table>

<!-- Hidden form that is used when the user tries to edit the 'notes'. --> 
<%= render partial: "application_partials/edit_notes", locals: {rec: @antibody_purification} %>

<%= link_to 'Back', antibody_purifications_path %>
