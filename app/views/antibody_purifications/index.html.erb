<header>
	<h1>Antibody Purifications</h1>

  <ul class="actions">
		<%= render partial: "application_partials/auth_new_record", locals: {record: AntibodyPurification.first} %>
  </ul> 
</header>

<table id="attributes">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @antibody_purifications.each do |antibody_purification| %>
      <tr>
        <td><%= antibody_purification.name %></td>
        <td><%= link_to fa_icon("pencil"), edit_antibody_purification_path(antibody_purification) %></td>
        <td><%= link_to fa_icon("trash"), antibody_purification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
