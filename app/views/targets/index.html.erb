<header>
	<h1 class="index-page-header">Targets</h1>
	<p class="model-definition"><%= Target::DEFINITION %></p>

  <ul class="actions">
		<%= render partial: "application_partials/auth_new_record" %>
  </ul> 
</header>

<table class="attributes index">
  <thead>
    <tr>
      <%= render partial: "application_partials/index_common_table_headers" %>
			<th>Ensembl accession</th>
			<th>RefSeq accession</th>
			<th>UniProtKB accession</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |rec| %>
      <tr>
        <%= render partial: "application_partials/index_common_table_cells", locals: {record: rec} %>
        <td><%= rec.ensembl %></td>
        <td><%= rec.refseq %></td>
        <td><%= rec.uniprotkb %></td>
        <td>
					<%= link_to fa_icon("pencil"), edit_target_path(rec) %>
        	<%= link_to fa_icon("trash"), rec, method: :delete, data: { confirm: 'Are you sure?' } %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if defined?(@page) %>
  <%= paginate @records %>
  <%= link_to "All", targets_path(all: true) %>
<% end %>

