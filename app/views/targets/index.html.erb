<header>
	<h1>Targets</h1>

  <ul class="actions">
		<%= render partial: "application_partials/auth_new_record", locals: {record: Target.first} %>
  </ul> 
</header>

<table id="attributes">
  <thead>
    <tr>
      <th>Encode identifier</th>
      <th>Name</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @targets.each do |target| %>
      <tr>
        <td><%= target.encode_identifier %></td>
        <td><%= target.name %></td>
        <td><%= link_to fa_icon("pencil"), edit_target_path(target) %></td>
        <td><%= link_to fa_icon("trash"), target, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Target', new_target_path %>
