<header>
	<h1>Targets</h1>

  <ul class="actions">
		<%= render partial: "application_partials/auth_new_record", locals: {model_class: Target} %>
  </ul> 
</header>

<table class="attributes">
  <thead>
    <tr>
      <th>Encode identifier</th>
      <th>Name</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @targets.each do |target| %>
      <tr>
        <td><%= target.encode_identifier %></td>
        <td><%= link_to target.name, target %></td>
        <td><%= link_to fa_icon("pencil"), edit_target_path(target) %></td>
        <td><%= link_to fa_icon("trash"), target, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
