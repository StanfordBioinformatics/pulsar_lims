<header>
	<h1 class="index-page-header">Document Types</h1>
	<p class="model-definition"><%= DocumentType::DEFINITION %></p>

	<ul class="actions">
		<%= render partial: "application_partials/auth_new_record", locals: {model_class: DocumentType} %>
	</ul>
</header>

<table class="attributes">
  <thead>
    <tr>
      <%= render partial: "application_partials/index_common_table_headers" %>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @document_types.each do |rec| %>
      <tr>
        <%= render partial: "application_partials/index_common_table_cells", locals: {record: rec} %>
        <td>
					<%= link_to fa_icon("pencil"), edit_document_type_path(rec) %>
        	<%= link_to fa_icon("trash"), rec, method: :delete, data: { confirm: 'Are you sure?' } %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>
