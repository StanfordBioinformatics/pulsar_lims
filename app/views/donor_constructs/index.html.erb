<header>
  <h1 class="index-page-header">Donor constructs</h1>
  
  <ul class="actions">
    <%= render partial: "application_partials/auth_new_record", locals: {model_class: DonorConstruct} %>
  </ul> 
</header>

<table class="attributes">
  <thead>
    <tr>
      <th>Name</th>
			<th>Creator</th>
			<th>Date created</th>
			<th>Addgene ID</th>
      <th>Cloning vector</th>
      <th>Vender</th>
      <th>Vender product identifier</th>
      <th>Target</th>
			<th>Ensembl transcript</th>
			<th>Refseq transcript</th>
      <th>Description</th>
      <th>Insert sequence</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @donor_constructs.each do |rec| %>
      <tr>
        <td><%= link_to rec.name, rec %></td>
				<td><%= rec.user.display() %></td>
				<td><%= time_ago_in_words(rec.created_at) %> ago </td>
				<td>
					<% if rec.addgene_id %>
						<%= link_to rec.addgene_id, ENV["ADDGENE_WEBSITE"] + rec.addgene_id %>
					<% end %>
				</td>
        <td><%= link_to rec.cloning_vector.name, rec.cloning_vector %></td>
        <td><%= link_to rec.vendor.name, rec.vendor %></td>
        <td><%= rec.vendor_product_identifier %></td>
        <td><%= link_to rec.target.name, rec.target %></td>
        <td><%= rec.ensembl_transcript %></td>
        <td><%= rec.refseq_transcript %></td>
        <td><%= rec.description %></td>
        <td><%= rec.insert_sequence %></td>
        <td>
					<%= link_to fa_icon("pencil"), edit_donor_construct_path(rec) %>
        	<%= link_to fa_icon("trash"), rec, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>
