<%= simple_form_for(@crispr_construct) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.association :target %>
  <%= f.input :guide_sequence %>
  <%= f.association :cloning_vector %>
  <%= f.input :description %>
  <%= f.association :vendor %>
  <%= f.input :vendor_product_identifier %>

  <% if @crispr_construct.construct_tags.persisted.any? %>
    <table id="construct_tags">
      <tr><th>Construct tags:</th></tr>
      <%= f.simple_fields_for :construct_tags do |ff| %>
        <% tag = @crispr_construct.construct_tags[ff.index] %>
        <tr>
          <td><%= tag.name %></td>
          <td><%= ff.input :_destroy, as: :boolean, label: "Remove" %></td>
        </tr>
      <% end %>  
    </table></br>
  <% end %>

  <div id="added_construct_tags"></div>
  <!-- .added_construct_tags will serve as the container for new construct_tag selections added by jQuery. -->

  <p> 
    <% exclude_tags = [] %>
    <% if @crispr_construct.construct_tags.persisted.any? %>
      <% exclude_tags = @crispr_construct.construct_tags.persisted.each { |x| x.id } %>
    <% end %>
    <%= link_to "Add Tag", select_construct_tag_crispr_constructs_path(:exclude_construct_tags => exclude_tags), remote: true, id: "add_construct_tag" %>
  </p>

  <div class="form-actions">
    <%= f.button :submit, class: "btn-primary" %>
  </div></br>
<% end %>
