<header class="index-view-header">
  <h1 class="index-page-header">                                                                       
    <%= @title || "Construct Tags" %>                                                                      
  </h1>
  <p class="model-definition"><%= ConstructTag::DEFINITION %></p>
  
  <ul class="actions">
    <%= render partial: "application_partials/auth_new_record" %>
  </ul> 
  <%= render partial: "application_partials/total", locals: {total: @total} %>
</header>

<table class="attributes index">
  <thead>
    <tr>
      <%= render partial: "application_partials/index_common_table_headers" %>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |rec| %>
      <tr>
        <%= render partial: "application_partials/index_common_table_cells", locals: {record: rec} %>
        <td><%= rec.description %></td>
        <td>
          <%= link_to fa_icon("pencil"), edit_construct_tag_path(rec) %>
          <%= link_to fa_icon("trash"), rec %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if defined?(@page) %>                                                                               
  <%= paginate @records %>                                                                             
  <%= link_to "All", construct_tags_path(all: true) %>                                                        
<% end %>
