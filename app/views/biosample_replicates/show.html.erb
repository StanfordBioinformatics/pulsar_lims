<%= render partial:  "application_partials/show_form_error_messages", locals: { :model_obj => @biosample_replicate } %>
<header>                                                                                               
  <h1><%= @biosample_replicate.name %></h1>                                                                  
                                                                                                       
  <ul class="actions">                                                                                 
    <%= render partial: "application_partials/auth_edit_record", locals: {record: @biosample_replicate} %>
    <%= render partial: "application_partials/auth_destroy_record", locals: {record: @biosample_replicate} %>
  </ul>                                                                                                
</header>                                                                                              
                                                                                                       
<%= render partial: "application_partials/record_meta", locals: { record: @biosample_replicate } %>   

<table class="attributes">
  <tbody>
    <tr>
      <th><strong>Experiment:</strong></th>
      <td>
        <% if @biosample_replicate.chipseq_experiment.present? %>
          <%= link_to_record_id(@biosample_replicate.chipseq_experiment) %>
        <% else %>
          None
        <% end %>
      </td>
    </tr>

    <tr>
      <th><strong>Control:</strong></th>
      <td><%= @biosample_replicate.control %></td>
    </tr>

    <tr>
      <th><strong>WT input:</strong></th>
      <td><%= @biosample_replicate.wild_type_input %></td>
    </tr>

    <tr>
      <th><strong>Biosmple:</strong></th>
      <td><%= link_to_record(@biosample_replicate.biosample) %></td>
    </tr>

    <tr>
      <th><strong>Biological replicate number:</strong></th>
      <td><%= @biosample_replicate.biological_replicate_number %></td>
    </tr>
    
    <tr>
      <th><strong>Technical replicate number:</strong></th>
      <td><%= @biosample_replicate.technical_replicate_number %></td>
    </tr>
    
    <tr class="notes-row">
      <th><strong>Notes:</strong></th>
      <td><%= @biosample_replicate.notes %></td>
    </tr>
</table>

<!-- Hidden form that is used when the user tries to edit the 'notes'. -->                             
<%= render partial: "application_partials/edit_notes", locals: {rec: @biosample_replicate} %>

<%= link_to 'Back', biosample_replicates_path %>
