<%= simple_fields_for @library do |f| %>
	<%= f.association :paired_barcodes, prompt: "Select paired barcodes", include_blank: true, collection: @paired_barcodes.map {|x| ["#{x.name}  #{x.index1.sequence}-#{x.index2.sequence}",x.id]}, label_html: {multiple: true, "data-toggle" => "tooltip", "title" => "If the library has paired-end barcode(s), select the paired-end barcode(s) used."} %>
<% end %>
