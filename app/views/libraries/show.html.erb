<% title(@library.name, "Libraries") %>
<header>
	<h1><%= @library.name %></h1>

  <ul class="actions">
    <li><%= link_to "Edit Library", edit_library_path(@library), class: "edit" %></li>
    <li><%= link_to "Delete Library", library_path(@library), method: :delete,
										 data: { confirm: "Are you sure you would like to delete this library?"},
										 class: "delete" %></li>
	</ul>
</header>

<p>
  <strong>Library Name</strong></br>
  <%= @library.name %>
</p>

<p>
	<table>
		<tr><th style="text-align:left">Documents:</th></tr>
		<%= render partial: "documents/link_to_document", locals: {documents: @library.documents} %>
	</table>
</p>

<p>
  <strong>Sequence ontology term:</strong>
  <%= link_to @library.nucleic_acid_term.name, @library.nucleic_acid_term %>
</p>

<p>
  <strong>Biosample:</strong>
  <%= link_to @library.biosample.name, @library.biosample %>
</p>

<p>
  <strong>Antibody:</strong>
  <%= link_to @library.antibody.name, @library.antibody %>
</p>

<p>
  <strong>Vendor:</strong>
  <%= link_to @library.vendor.name, @library.vendor %>
</p>

<p>
  <strong>Lot identifier:</strong>
  <%= @library.lot_identifier %>
</p>

<p>
  <strong>Vendor product identifier:</strong>
  <%= @library.vendor_product_identifier %>
</p>

<p>
  <strong>Size range:</strong>
  <%= @library.size_range %>
</p>

<p>
  <strong>Strand specific:</strong>
  <%= @library.strand_specific %>
</p>

<%= link_to 'Back', libraries_path %>
