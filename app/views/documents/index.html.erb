<header>
	<h1>Documents</h1>

	<ul class="actions">
		<%= render partial: "application_partials/auth_new_record", locals: {policy_class: Document} %>
	</ul>
</header>

<table id="attributes">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Content type</th>
      <th>Data</th>
      <th>Document type</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.name %></td>
        <td><%= document.description %></td>
        <td><%= document.content_type %></td>
        <td><%= link_to(document.name,:action => "document", :id => document.id) %></td>
        <td><%= document.document_type %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Document', new_document_path %>
