<header>
	<h1 class="index-page-header">Documents</h1>
	<p class="model-definition"><%= Document::DEFINITION %></p>

	<ul class="actions">
		<%= render partial: "application_partials/auth_new_record", locals: {model_class: Document} %>
	</ul>
</header>

<table class="attributes">
  <thead>
    <tr>
      <th>Name</th>
			<th>Creator</th>
			<th>Date created</th>
			<th>Is Protocol?</th>
      <th>Content type</th>
      <th>File Link</th>
      <th>Document type</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |rec| %>
      <tr>
        <td><%= link_to rec.name, rec %></td>
				<td><%= rec.user.display() %></td>
				<td><%= time_ago_in_words(rec.created_at) %> ago </td>
				<td><%= rec.is_protocol %></td>
        <td><%= rec.content_type %></td>
        <td><%= link_to(rec.name,:action => "document", :id => rec.id) %></td>
        <td><%= link_to rec.document_type.name, rec.document_type %></td>
        <td>
					<%= link_to fa_icon("pencil"), edit_document_path(rec) %>
        	<%= link_to fa_icon("trash"), rec, method: :delete, data: { confirm: 'Are you sure?' } %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>
