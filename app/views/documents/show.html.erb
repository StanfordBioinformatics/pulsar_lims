  <h1><%= @document.name %></h1>

  <ul class="actions">
    <%= render partial: "application_partials/auth_edit_record", locals: {record: @document} %>
    <%= render partial: "application_partials/auth_destroy_record", locals: {record: @document} %>
  </ul>
</header>

<p>
  <strong>Name:</strong>
  <%= @document.name %>
</p>

